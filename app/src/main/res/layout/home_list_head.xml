<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View android:layout_width="match_parent" android:layout_height="10dp"
          android:background="#ccc"/>
    <RelativeLayout
        android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
    >
        <TextView
            android:id="@+id/fast_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="新人抢购"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView android:id="@+id/fast_shop_desc" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/fast_shop"
                  android:layout_marginTop="5dp"
                  android:gravity="center"
                  android:text="快来抢购"/>
        <ImageView
            android:id="@+id/fast_shop_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/fast_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="2"/>
    <View android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="#ccc"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/ic_index_guess_like"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="猜你喜欢"
                  android:gravity="center_vertical"
                  android:textSize="12sp"
        android:textColor="#19FFD4"/>
    </LinearLayout>
</LinearLayout>